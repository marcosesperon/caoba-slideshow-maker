{
  "name": "CAOBA",
  "version": "1.0.3",
  "description": "CAOBA",
  "author": "Marcos Esper√≥n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "exif-parser": "^0.1.12",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.marcosesperon.caoba",
    "productName": "CAOBA",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!src/*"
    ]
  }
}
